@model APBD10.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />

<div class="row grey darken-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IndexNumber" class="control-label"></label>
                <input asp-for="IndexNumber" class="form-control" />
                <span asp-validation-for="IndexNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdStudies" class="control-label"></label>
                <select asp-for="IdStudies" class="form-control">
                    <option value="" selected disabled>Studies</option>
                    @foreach (var studies in ViewBag.ListOfStudies)
                    {
                        <option value="@studies.IdStudies">@studies.Name</option>
                    }
                </select>
                <span asp-validation-for="IdStudies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary green" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn blue darken-2"><i class="material-icons left">arrow_back</i>Back to List</a>
</div>