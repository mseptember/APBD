<Window x:Class="Cwiczenia3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cwiczenia3"
        mc:Ignorable="d"
        Title="Zadanie 1" WindowStartupLocation="CenterScreen" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button x:Name="Czerwony" Content="Zadanie 2" Background="Red" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Click="Czerwony_Click"/>
        <Button Content="Okno 2" Background="Black" Grid.Column="1" Grid.Row="0" Grid.RowSpan="4" />
        <Button x:Name="Zolty" Content="Zadanie 3 i 4" Background="Yellow" Grid.Column="2" Grid.Row="0" Click="Zolty_Click"/>
        <Button Content="Okno 4" Background="Blue" Grid.Column="2" Grid.Row="2" Grid.RowSpan="2" />
        
        
    </Grid>
</Window>
