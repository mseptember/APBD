@model Player

@{
	ViewData["Title"] = "Index";
}

<h2>Index</h2>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.LastName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FirstName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.BirthDate)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Team)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var player in (IEnumerable<Player>)ViewBag.Players)
		{
			<tr>
				<td>
					@player.LastName
				</td>
				<td>
					@player.FirstName
				</td>
				<td>
					@player.BirthDate.ToShortDateString()
				</td>
				<td>
					@player.Team.Name
				</td>
			</tr>
		}
	</tbody>
</table>

<hr />
<h2>Add Player</h2>
<form method="post" asp-action="Create">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="form-group">
		<label asp-for="FirstName" class="control-label"></label>
		<input asp-for="FirstName" class="form-control" />
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="LastName" class="control-label"></label>
		<input asp-for="LastName" class="form-control" />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="BirthDate" class="control-label"></label>
		<input asp-for="BirthDate" class="form-control" type="date" />
		<span asp-validation-for="BirthDate" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="IdTeam" class="control-label"></label>
		<select asp-for="IdTeam" class="form-control">
			<option value="" selected disabled>Team</option>
			@foreach (var team in ViewBag.Teams)
			{
				<option value="@team.IdTeam">@team.Name</option>
			}
		</select>
		<span asp-validation-for="IdTeam" class="text-danger"></span>
	</div>
	<div class="form-group">
		<input type="submit" />
	</div>
</form>